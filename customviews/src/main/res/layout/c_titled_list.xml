<?xml version="1.0" encoding="utf-8"?>
<com.codez.customviews.titledlist.ListWithTitle xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.codez.customviews.TextViewPlus
        android:id="@+id/desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="Title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_overlay" />

    <LinearLayout
        android:id="@+id/row_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.codez.customviews.TextViewPlus
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:gravity="center_horizontal"
            android:text="@string/common.empty.item"
            android:visibility="gone" />

    </LinearLayout>

</com.codez.customviews.titledlist.ListWithTitle>